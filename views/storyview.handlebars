<main class="container container-fluid mt-5">
    <!-- Render the sub layout -->
    <div class="columns">
        <div class="column">
            <p class="bd-notification">Welcome</p>
            <div class="columns is-mobile">
                <div class="column is-one-quarter">
                    <div class="menu">
                        <p class="menu-label">
                            User Poral
                        </p>
                        <ul class="menu-list">
                            <li><a>My Stories</a></li>
                            <li><a>Favorites</a></li>
                            <li><a>Drafts</a></li>
                            <li><a>Recommended</a></li>
                        </ul>
                    </div>
                </div>
                <div class="column is-three-quarters">
                    <div class="hero-body">
                        <p class="title">
                            {{prompt.title}}
                        </p>
                        <p class="subtitle">
                            {{prompt.user.name}}
                        </p>
                        <div class="card">
                            <div class="card-content">
                                <div class="content">
                                    <div class="control">
                                        <div class="prompt" >{{prompt.description}}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="add-comment">
                        <div>[Comment input goes here]</div>
                    </div>
                    <div class="container ml-3 pl-5">
                        <div class="comments">
                            {{#each prompt.comments as |comment|}}
                            {{#unless comment.parent_id}}
                            <div class="card ml-5">
                                <div class="card-content">
                                    <div class="content">
                                        <div class="control">
                                            <div> {{comment.body}} </div>
                                            <small>{{comment.user.name}}</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/unless}}
                            {{/each}}
                        </div>
                        <div class="comments">
                            {{#each prompt.comments as |comment|}}
                            {{#if comment.parent_id}}
                            <div class="card ml-5">
                                <div class="card-content">
                                    <div class="content">
                                        <div class="control">
                                            <div> {{comment.body}} </div>
                                            <small>{{comment.user.name}}</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>